@model MotorServicesAndWashApp.Models.UserModel
<section>
    <div class="container mt-5 pt-5">
        <div class="row">
            <div class="col-12 col-sm-8 col-md-6 m-auto">
                <div class="card" style="background-color: #F1F6F9;">
                    <div class="card-body">
                        <div class="text-center login-image">
                            <img src="~/img/recovery-logo.png" alt="Login Image" width="75" height="75" />
                        </div>
                        <form method="post" action="Recover-Password">
                            @if (TempData["Message"] != null)
                            {
                                <div class="alert alert-primary" role="alert">
                                    @TempData["Message"]
                                </div>

                            }
                            <div class="form-group">
                                <label for="username">Email</label>
                                <div class="input-group mb-3">
                                    <span class="input-group-text"><i class="bi bi-person-circle"></i></span>
                                    <input type="text" class="form-control" asp-for="email">
                                </div>
                                <span asp-validation-for="email" class="text-danger"></span>
                            </div>
                            <div class="text-center">
                                <input class="btn btn-primary btn-lg" type="submit" value="Sent Code" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
